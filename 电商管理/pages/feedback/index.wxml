<Tabs tabs="{{tabs}}" bindtabChange="handertabChange"></Tabs>
<view class="fb_main">
  <view class="fb_title">问题的种类</view>
  <view class="fb_tips">
    <text>功能建议</text>
    <text>购买遇到的问题</text>
    <text>性能问题</text>
    <text>其他</text>
  </view>
  <view class="fb_cotent">
    <textarea name="" id="" cols="30" rows="10" placeholder="请描述您的问题"></textarea>
    <view class="fb_tool">
      <button>+</button>
    </view>
  </view>
  <view class="fb_btn">
    <button type="warn">
      <icon type="success_no_circle" size="22" color="white"></icon>
      提交
    </button>
  </view>
</view>